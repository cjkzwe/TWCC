<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_output"
        android:layout_marginTop="50sp"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:background="@drawable/white_bg"
        android:gravity="end|center"
        android:textSize="27sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_output1"
        android:layout_marginTop="5sp"
        android:layout_width="350sp"
        android:layout_height="35sp"
        android:background="#000000"
        android:gravity="end|center"
        android:textSize="35sp"
        android:textColor="#b9b9b9"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_clean"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="C"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_delet"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="DEL"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_chu"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="รท"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_cheng"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="ร"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25sp"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_7"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="7"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_8"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="8"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_9"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="9"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_jian"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="-"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25sp"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_4"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="4"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_5"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="5"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_6"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="6"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_jia"
            android:layout_width="80sp"
            android:layout_height="65sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:text="+"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25sp"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="80sp"
                    android:layout_height="65sp"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:text="1"
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="80sp"
                    android:layout_height="65sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:text="2"
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="80sp"
                    android:layout_height="65sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:text="3"
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="170sp"
                    android:layout_height="65sp"
                    android:layout_weight="2"
                    android:background="@drawable/white_selector"
                    android:text="0"
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="80sp"
                    android:layout_height="65sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:text="."
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_dy"
            android:layout_width="80sp"
            android:layout_height="155sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:text="="
            android:textSize="27sp"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>